{
  "compilerOptions": {
    "baseUrl": ".",
    "removeComments": false,
    "inlineSources": false,
    "outDir": "build/dist",
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": ["src"],
  "files": ["src/vr-test/index.ts"],
  "exclude": [
    "src/vr-test",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.vr-test.ts",
    "src/**/*.vr-test.tsx",
    "src/**/*.js",
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
